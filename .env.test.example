# --- Neon Branch Management ---
# These are used to create ephemeral test branches from STAGING (not production)
NEON_API_KEY=napi_5y0grz9s75ild21i274szlkhat0ynbph8wb6capkkla9zzss325jstywad84fq5y              # Neon API key (from console.neon.tech > Account > API keys)
