{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "crons": [
    {
      "path": "/api/goals/cron-update?secret=${CRON_SECRET}",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cron/send-sequences?secret=${CRON_SECRET}",
      "schedule": "0 * * * *"
    }
  ]
}

