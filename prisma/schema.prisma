generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String                 @id @default(cuid())
  name                  String?
  email                 String                 @unique
  emailVerified         DateTime?
  image                 String?
  hasSeenOnboarding     Boolean                @default(false)
  hasProAccess          Boolean                @default(false) // Pro calculator access (unlocked via referral)
  signupSource          String?                // Signup source tracking (e.g., "prog", "facebook", "google_ads")
  isMarketingSubscribed Boolean               @default(true) // Whether subscribed to marketing emails
  marketingUnsubscribedAt DateTime?            // When user unsubscribed from marketing
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  accounts              Account[]
  assets                Asset[]
  customCategories      CustomCategory[]
  documents             Document[]
  financialGoals        FinancialGoal[]
  holdings              Holding[]
  liabilities           Liability[]
  netWorthHistory       NetWorthHistory[]
  recurringTransactions RecurringTransaction[]
  sessions              Session[]
  transactions          Transaction[]
  profile               UserProfile?
  sharedAccountMembers  SharedAccountMember[]
  merchantMappings      MerchantCategoryMap[]
  calculatorInvites     CalculatorInvite[]     // Invites sent by this user
  marketingEvents       MarketingEvent[]       // Marketing email events
  createdCampaigns      MarketingCampaign[]    // Campaigns created by this admin
  createdTemplates      EmailTemplate[]        // Templates created by this admin
  maaserPreferences     MaaserPreference[]     // Maaser/Chomesh income preferences
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  type        String
  amount      Float
  category    String
  description String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, date]) // Composite index for date filtering queries
  @@index([userId, category]) // Composite for category summaries in dashboard
  @@index([userId, date, type, amount]) // Composite for duplicate detection in import
}

model RecurringTransaction {
  id           String          @id @default(cuid())
  userId       String
  type         String
  amount       Float
  category     String
  name         String
  isActive     Boolean         @default(true)
  activeMonths Json?           // JSON array of "YYYY-MM" strings, null = all months
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  goal         FinancialGoal?

  @@index([userId])
  @@index([userId, isActive])
}

// ============================================
// FINANCIAL GOALS - Savings targets and planning
// ============================================
model FinancialGoal {
  id                     String                @id @default(cuid())
  userId                 String
  name                   String                // e.g., "קניית דירה לילד"
  targetAmount           Float                 // סכום היעד הכולל
  currentAmount          Float                 @default(0) // סכום שנצבר עד כה
  deadline               DateTime              // תאריך היעד
  category               String                @default("saving") // קטגוריה
  icon                   String?               // Lucide icon name
  
  // קישור להוצאה קבועה (אופציונלי)
  recurringTransactionId String?               @unique
  recurringTransaction   RecurringTransaction? @relation(fields: [recurringTransactionId], references: [id], onDelete: SetNull)

  createdAt              DateTime              @default(now())
  updatedAt              DateTime              @updatedAt
  user                   User                  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, category])
}

model Asset {
  id           String              @id @default(cuid())
  userId       String
  name         String
  category     String
  value        Float
  liquidity    String              @default("locked") // immediate | short_term | pension | locked
  gemachId     String?             // UUID linking to paired Liability (null for regular assets)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  valueHistory AssetValueHistory[]

  @@index([userId])
  @@index([userId, category])
  @@index([userId, updatedAt])
  @@index([gemachId])
}

model AssetValueHistory {
  id        String   @id @default(cuid())
  assetId   String
  value     Float
  monthKey  String
  createdAt DateTime @default(now())
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@unique([assetId, monthKey])
}

model Liability {
  id                String   @id @default(cuid())
  userId            String
  name              String
  type              String
  totalAmount       Float
  monthlyPayment    Float
  interestRate      Float    @default(0)
  loanTermMonths    Int      @default(0)
  startDate         DateTime @default(now())
  remainingAmount   Float?
  loanMethod        String   @default("spitzer")
  hasInterestRebate   Boolean  @default(false)
  linkage             String   @default("none") // none | index | foreign
  isActiveInCashFlow  Boolean  @default(true)
  gemachId            String?  // UUID linking to paired Asset (null for regular liabilities)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([userId, type])
  @@index([gemachId])
}

model NetWorthHistory {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  netWorth    Float
  assets      Float
  liabilities Float
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@index([userId])
  @@index([userId, date])
}

model Document {
  id         String   @id @default(cuid())
  userId     String
  filename   String
  storedName String
  url        String?  // Vercel Blob URL - optional for migration from local files
  mimeType   String
  size       Int
  entityType String
  entityId   String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Holding {
  id               String   @id @default(cuid())
  userId           String
  name             String
  symbol           String?
  type             String
  currentValue     Float
  targetAllocation Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Hybrid Engine Fields
  provider         String   @default("YAHOO") // YAHOO | EOD
  currency         String   @default("USD")   // USD | ILS

  // Caching Fields (reduce API calls)
  cachedBeta       Float?
  cachedSector     String?
  cachedPrice      Float?
  lastCalculatedAt DateTime?

  // Display Preferences
  priceDisplayUnit String   @default("ILS") // ILS | ILS_AGOROT | USD

  @@index([userId])
  @@index([symbol])
  @@index([userId, symbol])
}

model CustomCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String   // Hebrew name
  type      String   // 'expense' | 'income' | 'asset' | 'liability'
  icon      String?  // Icon name from Lucide (optional)
  color     String?  // Hex color (optional)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name, type]) // Prevent duplicates
  @@index([userId])
}

// ============================================
// USER PROFILE - Personal details for recommendations
// ============================================
model UserProfile {
  id             String    @id @default(cuid())
  userId         String    @unique
  militaryStatus String?   // none | reserve | career
  maritalStatus  String?   // single | married | divorced | widowed
  employmentType String?   // employee | self_employed | both | student
  hasChildren    Boolean   @default(false)
  childrenCount  Int       @default(0)
  ageRange       String?   // 18-25 | 26-35 | 36-45 | 46-55 | 56-65 | 65+
  monthlyIncome  String?   // income ranges
  riskTolerance  String?   // low | medium | high
  isStudent             Boolean   @default(false)
  graduationDate        DateTime? // לזיכוי מס אקדמי
  hasIndependentAccount Boolean   @default(false)
  
  // Portfolio Cash Balance
  cashBalance           Float     @default(0) // מזומן בתיק ההשקעות בשקלים

  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// SHARED ACCOUNTS - Allow multiple users to share data
// ============================================

// SECURITY: Type-safe enum for member roles (prevents privilege escalation)
enum MemberRole {
  OWNER
  MEMBER
  VIEWER  // Read-only access
}

model SharedAccount {
  id        String                @id @default(cuid())
  name      String                @default("החשבון שלי")
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  members   SharedAccountMember[]
  invites   AccountInvite[]
}

model SharedAccountMember {
  id              String        @id @default(cuid())
  userId          String
  sharedAccountId String
  role            MemberRole    @default(MEMBER) // SECURITY: Type-safe enum
  canEdit         Boolean       @default(true)   // Permission: can edit data
  canDelete       Boolean       @default(true)   // Permission: can delete data  
  canInvite       Boolean       @default(false)  // Permission: can invite others
  joinedAt        DateTime      @default(now())
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sharedAccount   SharedAccount @relation(fields: [sharedAccountId], references: [id], onDelete: Cascade)

  @@unique([userId, sharedAccountId])
  @@index([userId])
  @@index([sharedAccountId])
  @@index([sharedAccountId, userId]) // Composite for getSharedUserIds() - called on every API request
}

model AccountInvite {
  id              String        @id @default(cuid())
  sharedAccountId String
  email           String
  token           String        @unique @default(cuid())
  expiresAt       DateTime
  createdAt       DateTime      @default(now())
  sharedAccount   SharedAccount @relation(fields: [sharedAccountId], references: [id], onDelete: Cascade)

  @@index([sharedAccountId])
  @@index([token])
}

// ============================================
// CALCULATOR INVITES - Viral unlock mechanism
// ============================================
enum CalcInviteStatus {
  PENDING
  ACCEPTED
  EXPIRED
}

model CalculatorInvite {
  id            String           @id @default(cuid())
  inviterId     String                              // User who sent the invite
  inviteeEmail  String                              // Email of invited friend
  token         String           @unique @default(cuid())
  status        CalcInviteStatus @default(PENDING)  // PENDING | ACCEPTED | EXPIRED
  createdAt     DateTime         @default(now())
  expiresAt     DateTime                            // 30 days validity
  acceptedAt    DateTime?                           // When friend signed up
  inviter       User             @relation(fields: [inviterId], references: [id], onDelete: Cascade)

  @@index([inviterId])
  @@index([inviteeEmail])
  @@index([token])
  @@index([status])
}

// ============================================
// MERCHANT CATEGORY MAP - AI Learning Cache
// ============================================
model MerchantCategoryMap {
  id           String   @id @default(cuid())
  userId       String
  merchantName String
  category     String
  isManual     Boolean  @default(false) // האם המשתמש הזין ידנית
  alwaysAsk    Boolean  @default(false) // תמיד לשאול את המשתמש (לעסקים גנריים כמו ביט)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, merchantName])
  @@index([userId])
}

// ============================================
// MAASER PREFERENCES - Income obligation tracking for Maaser/Chomesh
// ============================================
model MaaserPreference {
  id              String   @id @default(cuid())
  userId          String
  incomeSource    String   // תיאור ההכנסה (לזיהוי מדויק)
  incomeCategory  String?  // קטגוריית ההכנסה (salary, bonus, etc.)
  isObligated     Boolean  @default(true) // האם חייב במעשר/חומש
  calculationType String   @default("maaser") // "maaser" (10%) | "chomesh" (20%)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, incomeSource]) // מניעת כפילויות לפי משתמש ומקור הכנסה
  @@index([userId])
  @@index([userId, incomeCategory])
}

// ============================================
// AUDIT LOG - Security & Activity Tracking
// ============================================
enum AuditAction {
  // Authentication
  LOGIN
  LOGOUT
  LOGIN_FAILED
  SESSION_REFRESH
  
  // Data Access
  DATA_EXPORT
  DATA_VIEW
  
  // Data Modification
  CREATE
  UPDATE
  DELETE
  BULK_DELETE
  
  // Account Management
  INVITE_SENT
  INVITE_ACCEPTED
  MEMBER_REMOVED
  ROLE_CHANGED
  
  // Security Events
  PASSWORD_CHANGE
  RATE_LIMITED
  UNAUTHORIZED_ACCESS
  CSRF_VIOLATION
}

model AuditLog {
  id         String      @id @default(cuid())
  userId     String?     // Null for anonymous/system actions
  action     AuditAction
  entityType String?     // e.g., "Transaction", "Asset", "Document"
  entityId   String?     // ID of the affected entity
  metadata   Json?       // Additional context (sanitized, no PII)
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime    @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@index([entityType, entityId])
}

// ============================================
// SECURITY ENRICHMENT - Hebrew names and sectors for Israeli securities
// ============================================
model SecurityEnrichment {
  id          String   @id @default(cuid())
  symbol      String   @unique // מפתח הצלבה ל-EOD (למשל: "1159250.TA")
  nameHe      String   // השם הרשמי בעברית (למשל: "מגדל (4D) ת"א 125")
  shortNameHe String?  // שם ידידותי לתצוגה בטבלאות צפופות
  sectorHe    String   // סקטור מפורט בעברית (למשל: "מניות - תל אביב 125")
  assetType   String   // סוג: ETF, Mutual Fund, Stock, Bond
  updatedAt   DateTime @updatedAt

  @@index([symbol])
  @@index([nameHe]) // אופטימיזציה לחיפוש בעברית
}

// ============================================
// EMAIL MARKETING - Campaign management and tracking
// ============================================
enum CampaignStatus {
  DRAFT
  SCHEDULED
  SENDING
  COMPLETED
  CANCELLED
}

enum MarketingEventType {
  SENT
  DELIVERED
  OPENED
  CLICKED
  BOUNCED
  COMPLAINED
  UNSUBSCRIBED
}

model MarketingCampaign {
  id              String            @id @default(cuid())
  name            String            // Internal campaign name
  subject         String            // Email subject
  content         String            // HTML/JSON email content
  status          CampaignStatus    @default(DRAFT)
  segmentFilter   Json              // Audience segmentation settings
  sentCount       Int               @default(0)
  openCount       Int               @default(0)
  clickCount      Int               @default(0)
  bounceCount     Int               @default(0)
  complaintCount  Int               @default(0)
  scheduledAt     DateTime?         // Scheduled send time
  startedAt       DateTime?         // When sending started
  completedAt     DateTime?         // When sending completed
  createdBy       String            // Admin user ID who created
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  creator         User              @relation(fields: [createdBy], references: [id], onDelete: Cascade)
  events          MarketingEvent[]

  @@index([createdBy])
  @@index([status])
  @@index([scheduledAt])
}

model MarketingEvent {
  id          String              @id @default(cuid())
  campaignId  String
  userId      String
  emailId     String              // Resend email ID
  eventType   MarketingEventType
  metadata    Json?               // Additional data (clicked URL, IP, user agent)
  timestamp   DateTime            @default(now())
  campaign    MarketingCampaign   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([emailId, eventType]) // Prevent duplicate events for same email
  @@index([campaignId])
  @@index([userId])
  @@index([emailId])
  @@index([eventType])
  @@index([timestamp])
}

model EmailTemplate {
  id          String   @id @default(cuid())
  name        String   // Template name
  subject     String   // Default subject
  content     String   // HTML/JSON content
  description String?  // Template description
  category    String?  // 'newsletter' | 'promotional' | 'announcement' | null
  isSystem    Boolean  @default(false) // System template (cannot be deleted)
  createdBy   String   // Admin user ID who created
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User     @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([createdBy])
  @@index([category])
}

// ============================================
// INBOX - Incoming/outgoing email management
// ============================================
model InboxMessage {
  id              String   @id @default(cuid())
  resendEmailId   String?  @unique           // Resend email_id for dedup
  from            String                     // Sender display (e.g., "John <john@gmail.com>")
  fromEmail       String                     // Extracted email address
  to              String[]                   // Recipient addresses
  cc              String[]                   // CC addresses
  bcc             String[]                   // BCC addresses
  subject         String
  htmlBody        String?                    // HTML content
  textBody        String?                    // Plain text content
  isRead          Boolean  @default(false)
  isStarred       Boolean  @default(false)
  isArchived      Boolean  @default(false)
  direction       String   @default("inbound") // "inbound" | "outbound"
  parentId        String?                    // For threading - reply to which message
  threadId        String?                    // Group related messages
  replyFromAddress String?                   // Which @myneto.co.il address was used to reply
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  parent          InboxMessage?  @relation("MessageThread", fields: [parentId], references: [id])
  replies         InboxMessage[] @relation("MessageThread")

  @@index([fromEmail])
  @@index([threadId])
  @@index([isRead])
  @@index([isArchived])
  @@index([createdAt])
  @@index([direction])
}
