generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String                 @id @default(cuid())
  name                  String?
  email                 String                 @unique
  emailVerified         DateTime?
  image                 String?
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  accounts              Account[]
  assets                Asset[]
  documents             Document[]
  holdings              Holding[]
  liabilities           Liability[]
  netWorthHistory       NetWorthHistory[]
  recurringTransactions RecurringTransaction[]
  sessions              Session[]
  transactions          Transaction[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  type        String
  amount      Float
  category    String
  description String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model RecurringTransaction {
  id        String   @id @default(cuid())
  userId    String
  type      String
  amount    Float
  category  String
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Asset {
  id           String              @id @default(cuid())
  userId       String
  name         String
  category     String
  value        Float
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  valueHistory AssetValueHistory[]

  @@index([userId])
}

model AssetValueHistory {
  id        String   @id @default(cuid())
  assetId   String
  value     Float
  monthKey  String
  createdAt DateTime @default(now())
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@unique([assetId, monthKey])
}

model Liability {
  id                String   @id @default(cuid())
  userId            String
  name              String
  type              String
  totalAmount       Float
  monthlyPayment    Float
  interestRate      Float    @default(0)
  loanTermMonths    Int      @default(0)
  startDate         DateTime @default(now())
  remainingAmount   Float?
  loanMethod        String   @default("spitzer")
  hasInterestRebate Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model NetWorthHistory {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  netWorth    Float
  assets      Float
  liabilities Float
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Document {
  id         String   @id @default(cuid())
  userId     String
  filename   String
  storedName String
  url        String?  // Vercel Blob URL - optional for migration from local files
  mimeType   String
  size       Int
  entityType String
  entityId   String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Holding {
  id               String   @id @default(cuid())
  userId           String
  name             String
  symbol           String?
  type             String
  currentValue     Float
  targetAllocation Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
