generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                    String                 @id @default(cuid())
  name                  String?
  email                 String                 @unique
  emailVerified         DateTime?
  image                 String?
  hasSeenOnboarding     Boolean                @default(false)
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  accounts              Account[]
  assets                Asset[]
  customCategories      CustomCategory[]
  documents             Document[]
  holdings              Holding[]
  liabilities           Liability[]
  netWorthHistory       NetWorthHistory[]
  recurringTransactions RecurringTransaction[]
  sessions              Session[]
  transactions          Transaction[]
  profile               UserProfile?
  sharedAccountMembers  SharedAccountMember[]
  merchantMappings      MerchantCategoryMap[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  type        String
  amount      Float
  category    String
  description String
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model RecurringTransaction {
  id        String   @id @default(cuid())
  userId    String
  type      String
  amount    Float
  category  String
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Asset {
  id           String              @id @default(cuid())
  userId       String
  name         String
  category     String
  value        Float
  liquidity    String              @default("locked") // immediate | short_term | pension | locked
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  user         User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  valueHistory AssetValueHistory[]

  @@index([userId])
}

model AssetValueHistory {
  id        String   @id @default(cuid())
  assetId   String
  value     Float
  monthKey  String
  createdAt DateTime @default(now())
  asset     Asset    @relation(fields: [assetId], references: [id], onDelete: Cascade)

  @@unique([assetId, monthKey])
}

model Liability {
  id                String   @id @default(cuid())
  userId            String
  name              String
  type              String
  totalAmount       Float
  monthlyPayment    Float
  interestRate      Float    @default(0)
  loanTermMonths    Int      @default(0)
  startDate         DateTime @default(now())
  remainingAmount   Float?
  loanMethod        String   @default("spitzer")
  hasInterestRebate Boolean  @default(false)
  linkage           String   @default("none") // none | index | foreign
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model NetWorthHistory {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  netWorth    Float
  assets      Float
  liabilities Float
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Document {
  id         String   @id @default(cuid())
  userId     String
  filename   String
  storedName String
  url        String?  // Vercel Blob URL - optional for migration from local files
  mimeType   String
  size       Int
  entityType String
  entityId   String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Holding {
  id               String   @id @default(cuid())
  userId           String
  name             String
  symbol           String?
  type             String
  currentValue     Float
  targetAllocation Float
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model CustomCategory {
  id        String   @id @default(cuid())
  userId    String
  name      String   // Hebrew name
  type      String   // 'expense' | 'income' | 'asset' | 'liability'
  icon      String?  // Icon name from Lucide (optional)
  color     String?  // Hex color (optional)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, name, type]) // Prevent duplicates
  @@index([userId])
}

// ============================================
// USER PROFILE - Personal details for recommendations
// ============================================
model UserProfile {
  id             String    @id @default(cuid())
  userId         String    @unique
  militaryStatus String?   // none | reserve | career
  maritalStatus  String?   // single | married | divorced | widowed
  employmentType String?   // employee | self_employed | both | student
  hasChildren    Boolean   @default(false)
  childrenCount  Int       @default(0)
  ageRange       String?   // 18-25 | 26-35 | 36-45 | 46-55 | 56-65 | 65+
  monthlyIncome  String?   // income ranges
  riskTolerance  String?   // low | medium | high
  isStudent      Boolean   @default(false)
  graduationDate DateTime? // לזיכוי מס אקדמי
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// SHARED ACCOUNTS - Allow multiple users to share data
// ============================================
model SharedAccount {
  id        String                @id @default(cuid())
  name      String                @default("החשבון שלי")
  createdAt DateTime              @default(now())
  updatedAt DateTime              @updatedAt
  members   SharedAccountMember[]
  invites   AccountInvite[]
}

model SharedAccountMember {
  id              String        @id @default(cuid())
  userId          String
  sharedAccountId String
  role            String        @default("member") // owner | member
  joinedAt        DateTime      @default(now())
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  sharedAccount   SharedAccount @relation(fields: [sharedAccountId], references: [id], onDelete: Cascade)

  @@unique([userId, sharedAccountId])
  @@index([userId])
  @@index([sharedAccountId])
}

model AccountInvite {
  id              String        @id @default(cuid())
  sharedAccountId String
  email           String
  token           String        @unique @default(cuid())
  expiresAt       DateTime
  createdAt       DateTime      @default(now())
  sharedAccount   SharedAccount @relation(fields: [sharedAccountId], references: [id], onDelete: Cascade)

  @@index([sharedAccountId])
  @@index([token])
}

// ============================================
// MERCHANT CATEGORY MAP - AI Learning Cache
// ============================================
model MerchantCategoryMap {
  id           String   @id @default(cuid())
  userId       String
  merchantName String
  category     String
  isManual     Boolean  @default(false) // האם המשתמש הזין ידנית
  alwaysAsk    Boolean  @default(false) // תמיד לשאול את המשתמש (לעסקים גנריים כמו ביט)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, merchantName])
  @@index([userId])
}
